<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background putih -->
    <solid android:color="@color/white"/>

    <!-- Sudut tumpul -->
    <corners android:radius="16dp"/> <!-- Diubah menjadi 16dp untuk lebih halus -->

    <!-- Sedikit bayangan / border tipis -->
    <stroke
        android:width="1dp"
        android:color="#6A1B9A"/> <!-- Ungu -->

    <!-- Padding dalam kotak -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>