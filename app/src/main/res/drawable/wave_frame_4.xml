<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6A1B9A"
                android:centerColor="#9C27B0"
                android:endColor="#FF8E53"
                android:angle="225" />
        </shape>
    </item>

    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="270dp" />
            <corners android:topLeftRadius="220dp" android:topRightRadius="220dp" />
            <solid android:color="#2EFFFFFF" />
        </shape>
    </item>

    <item android:gravity="top">
        <shape android:shape="rectangle">
            <size android:height="160dp" />
            <corners android:bottomLeftRadius="200dp" android:bottomRightRadius="160dp" />
            <solid android:color="#24FFFFFF" />
        </shape>
    </item>
</layer-list>

