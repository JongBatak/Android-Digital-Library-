<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6A1B9A"
                android:centerColor="#9B59B6"
                android:endColor="#FF8E53"
                android:angle="45" />
        </shape>
    </item>

    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <size android:height="260dp" />
            <corners android:topLeftRadius="260dp" android:topRightRadius="260dp" />
            <solid android:color="#2AFFFFFF" />
        </shape>
    </item>

    <item android:gravity="top">
        <shape android:shape="rectangle">
            <size android:height="180dp" />
            <corners android:bottomLeftRadius="200dp" android:bottomRightRadius="200dp" />
            <solid android:color="#26FFFFFF" />
        </shape>
    </item>
</layer-list>

