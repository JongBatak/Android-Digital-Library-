<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="22dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_section_header"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btn_header_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_btn_circle_transparent"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_header_back"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Buku"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_section_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah, edit, dan hapus buku"
                android:textColor="#E6FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_header_action"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Tambah"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:minHeight="48dp"
            android:paddingHorizontal="20dp"
            app:cornerRadius="999dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

