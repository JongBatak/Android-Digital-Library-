<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".PerpusApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PerpustakaanOffline"
        tools:targetApi="31">

        <!-- LaunchActivity is the app entrypoint and decides whether to show register/login or main menu -->
        <activity
            android:name=".LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.PerpustakaanOffline">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="Register"
            android:theme="@style/Theme.PerpustakaanOffline" />

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="Login"
            android:theme="@style/Theme.PerpustakaanOffline" />

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.PerpustakaanOffline" />

        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:theme="@style/Theme.PerpustakaanOffline" />

        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.PerpustakaanOffline" />

        <activity
            android:name=".BookDetailsActivity"
            android:exported="false"
            android:label="Book Details"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.PerpustakaanOffline" />

        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.PerpustakaanOffline" />
        <activity
            android:name=".AdminBooksActivity"
            android:exported="false"
            android:theme="@style/Theme.PerpustakaanOffline" />
        <activity
            android:name=".AdminUsersActivity"
            android:exported="false"
            android:theme="@style/Theme.PerpustakaanOffline" />
        <activity
            android:name=".AdminStatsActivity"
            android:exported="false"
            android:theme="@style/Theme.PerpustakaanOffline" />

        <activity
            android:name=".UserDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.PerpustakaanOffline" />

    </application>

</manifest>